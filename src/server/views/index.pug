html
  head
    title Linky Tempo
    meta(charset="utf-8")
    script(src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js")
    script(type="text/javascript" src="https://unpkg.com/tabulator-tables@6.0.0/dist/js/tabulator.min.js")
    script(type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js")
    script(type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js")
    script(type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js")
  body
    style.
      html, body, #main {
        width: 100%;
        height: 100%;
        margin: 0;
        overflow: hidden;
        background: rgb(48, 52, 70);
      }
      #chart {
        width: 100%;
        height: 70%;
      }
      #table-chart {
        width: calc(100% - 120px);
        height: calc(100% - 40px);
      }
      #table {
        width: 100%;
        height: 30%;
        padding: 20px 60px;
      }
      #daterange {
        position: absolute;
        z-index: 2;
        top: 10px;
        width: 300px;
        text-align: center;
        left: calc(50% - 150px);
        background: rgb(48, 52, 70);
        color:white;
        border: 0!important;
        font-size: 20px;
      }
      #daterange:hover {
        border: 0!important;
      }
    #main
      input#daterange(type="text" name="daterange")
      #chart
      #table
        #table-chart
    script(src="theme.js")
    script(src="script.js")
    link(href="tabulator.css" rel="stylesheet")
    link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css")